<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800" type="text" placeholder="Title goes here " name="title">
                <textarea class="block px-5 w-full rounded-md outline-none py-2 resize-none mt-2 bg-zinc-800" placeholder="Write your task details here" name="details"></textarea>
                <input class="mt-2 bg-blue-600 py-1 px-2 rounded-md cursor-pointer" type="submit">
            </form>
        </div>
        <div class="tasks p-10 flex gap-4 flex-wrap">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task flex-grow-0 flex-shrink-0 min-w-72 px-3 py-4 bg-zinc-800 rounded-md text-white">
                        <h1 class="text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center">
                            <a class="text-blue-500 inline-block mt-3 cursor-pointer" href="/file/<%= val %>">Read More</a>
                            <a class="text-blue-500 inline-block mt-3 cursor-pointer" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-gray-400">no task yet...</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
